    </div>

    <main>
      <!-- Chapter Header -->
      <section class={`relative py-20 bg-gradient-to-br from-${chapterColor}-50 via-parchment-50 to-white dark:from-${chapterColor}-900/20 dark:via-ink-800 dark:to-ink-900`}>
