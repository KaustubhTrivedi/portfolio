              <circle cx="50" cy="50" r="30" fill="currentColor" class={`text-${chapterColor}-300`}/>
            </svg>
          </div>
          
          <div class="absolute top-12 right-1/3 w-12 h-12 opacity-15 animate-float" style="animation-delay: -1s;">
            <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
              <polygon points="50,20 80,80 20,80" fill="currentColor" class={`text-${chapterColor}-400`}/>
            </svg>
          </div>

          <!-- Chapter Number -->
          <div class={`inline-block text-6xl font-heading font-bold text-${chapterColor}-200 mb-4`}>
            {chapter}
          </div>
          
          <!-- Chapter Label -->
          <p class={`text-${chapterColor}-600 dark:text-${chapterColor}-400 font-medium mb-4`}>{chapter}</p>
          
          <!-- Chapter Title -->
          <h1 class="font-heading text-4xl lg:text-5xl font-bold text-ink-800 dark:text-ink-100 mb-6">
            {chapterTitle}
          </h1>
          
          <!-- Decorative Divider -->
          <div class={`w-24 h-1 bg-gradient-to-r from-${chapterColor}-400 to-${chapterColor}-600 mx-auto rounded-full`}></div>
        </div>
      </section>

      <!-- Page Content -->
      <slot />
    </main>

    <!-- Footer -->
    <footer class="py-12 bg-ink-800 dark:bg-ink-900 text-white">
