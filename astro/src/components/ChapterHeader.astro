---
export interface Props {
  chapter: string;
  title: string;
  subtitle?: string;
  color?: string;
}

const { chapter, title, subtitle, color = 'blush' } = Astro.props;
---

<header class="relative py-20 lg:py-32 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-30">
    <svg class="w-full h-full" viewBox="0 0 400 400" fill="none" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="dots" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
          <circle cx="20" cy="20" r="2" fill="currentColor" class={`text-${color}-200 dark:text-${color}-700`}></circle>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#dots)"></rect>
    </svg>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute top-10 left-10 w-20 h-20 opacity-20">
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M50 10 L90 90 L10 90 Z" fill="currentColor" class={`text-${color}-300 dark:text-${color}-600`}></path>
    </svg>
  </div>
  
  <div class="absolute bottom-10 right-10 w-16 h-16 opacity-20">
    <svg viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
      <circle cx="50" cy="50" r="40" stroke="currentColor" stroke-width="8" fill="none" class={`text-${color}-300 dark:text-${color}-600`}></circle>
    </svg>
  </div>

  <div class="relative max-w-4xl mx-auto px-6 text-center">
    <!-- Chapter Number -->
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-white dark:bg-ink-800 shadow-story mb-6">
      <span class={`font-heading text-2xl font-bold text-${color}-600 dark:text-${color}-400`}>
        {chapter.replace('Chapter ', '').replace('Epilogue', 'E')}
      </span>
    </div>

    <!-- Chapter Label -->
    <p class={`text-${color}-600 dark:text-${color}-400 font-medium mb-4 tracking-wide uppercase text-sm`}>
      {chapter}
    </p>

    <!-- Title -->
    <h1 class="font-heading text-4xl lg:text-6xl font-bold text-ink-800 dark:text-ink-100 mb-6 leading-tight">
      <span class="inline-block animate-fade-in">
        {title}
      </span>
    </h1>

    <!-- Subtitle -->
    {subtitle && (
      <p class="text-xl text-ink-600 dark:text-ink-300 max-w-2xl mx-auto animate-slide-up">
        {subtitle}
      </p>
    )}

    <!-- Decorative Divider -->
    <div class="flex items-center justify-center mt-8">
      <div class={`w-8 h-1 bg-${color}-400 dark:bg-${color}-500 rounded-full`}></div>
      <div class={`w-4 h-1 bg-${color}-300 dark:bg-${color}-600 rounded-full mx-2`}></div>
      <div class={`w-2 h-1 bg-${color}-200 dark:bg-${color}-700 rounded-full`}></div>
    </div>
  </div>
</header> 